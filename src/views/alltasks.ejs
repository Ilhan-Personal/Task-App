<% layout('layouts/boilerplate')%>

<div class="p-3 bg-white rounded box-shadow">
  <h3 class="border-bottom border-gray  mb-0">All Tasks</h3>

    <% let num = 1; for (let task of tasks) { %>
      <div class="mt-3 card text-bg-primary mb-3" style="max-width: 18rem;">
        <div class="card-header">Task # <%= num %></div>
        <div class="card-body">
          <h5 class="card-title"><%= task.name %></h5>
          <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Optio vel repellendus</p>
          <a href="/tasks/<%= task.id %>">View Task</a>
        </div>
      </div>
      <% num=num+1 %>
    <% } %>
  </div>


</div>
